{
  "type": "object",
  "required": ["user", "contest", "announcements", "lifetimeLeaderboard", "bookOfBusiness", "downlines"],
  "properties": {
    "user": {
      "type": "object",
      "required": [
        "npn",
        "name",
        "leaderBoardRank",
        "contestTier",
        "contestTierGoal",
        "percentProgress",
        "brmName",
        "brmEmail",
        "brmPhone",
        "policies",
        "policiesByMonth"
      ],
      "properties": {
        "npn":             {"type": "integer"},
        "name":            {"type": "string"},
        "leaderBoardRank": {"type": "integer"},
        "contestTier":     {"type": "integer"},
        "contestTierGoal": {"type": "integer"},
        "percentProgress": {"type": "integer"},
        "brmName":         {"type": "string"},
        "brmEmail":        {"type": "string"},
        "brmPhone":        {"type": "string"},
        "policies":        {"type": "object",
                            "required": [
                              "policiesSoldLifetime",
                              "currentContestPolicies",
                              "rewardRevenueLifetime",
                              "currentContestRevenue"
                            ],
                            "properties": {
                              "policiesSoldLifetime":   {"type": "integer"},
                              "currentContestPolicies": {"type": "integer"},
                              "rewardRevenueLifetime":  {"type": "string"},
                              "currentContestRevenue":      {"type": "string"}
                            }
                           },
        "policiesByMonth": {"type": "object",
                            "required": [
                              "february",
                              "march",
                              "april",
                              "may",
                              "june",
                              "july",
                              "august",
                              "september",
                              "october",
                              "november",
                              "december",
                              "january"
                            ],
                            "properties": {
                              "january":  {"type": "integer"},
                              "february": {"type": "integer"},
                              "march":    {"type": "integer"},
                              "april":    {"type": "integer"},
                              "may":      {"type": "integer"},
                         "june":     {"type": "integer"},
                         "july":     {"type": "integer"},
                         "august":   {"type": "integer"},
                         "september":{"type": "integer"},
                         "august":   {"type": "integer"},
                         "september":{"type": "integer"},
                         "october":  {"type": "integer"},
                         "november": {"type": "integer"},
                         "december": {"type": "integer"}
                       }
                      }
      }
    },
    "contest": {
      "type": "object",
      "required": [
        "name",
        "startDate",
        "endDate",
        "tiers",
        "leaderboard"
      ],
      "properties": {
        "name":      {"type": "string"},
        "startDate": {"type": "string"},
        "endDate":   {"type": "string"},
        "leaderboard": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["npn", "policies"],
            "properties": {
              "npn": {"type": "integer"},
              "policies": {"type": "integer"}
            }
          }
        },
        "tiers":     {
          "type": "array",
          "items": {
            "type":  "object",
            "required": [
              "name",
              "goal",
              "revShare",
              "potentialEarnings"
            ],
            "properties": {
              "name":             {"type": "string"},
              "goal":             {"type": "integer"},
              "revShare":         {"type": "integer"},
              "potentialEarnings":{"type": "integer"}
            }
          }
        }
      }
    },
    "announcements": {
      "type": "object",
      "required": [
        "generalNews"
      ],
      "properties": {
        "generalNews":  {"type": "string"}
      }
    },
    "lifetimeLeaderboard": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["npn", "policies"],
        "properties": {
          "npn": {"type": "integer"},
          "policies": {"type": "integer"}
        }
      }
    },
    "bookOfBusiness": {
      "type": "array",
      "items": {
        "required": ["HICN",
                     "memberName",
                     "carrier",
                     "product",
                     "effectiveDate",
                     "cmsPlanYear",
                     "status"],
        "properties": {
          "HICN": {"type": "string"},
          "memberName": {"type": "string"},
          "carrier": {"type": "string"},
          "product": {"type": "string"},
          "effectiveDate": {"type": "string"},
          "cmsPlanYear": {"type": "string"},
          "status": {"type": "string"}
        }
      }
    },
    "downlines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "totalPoliciesSold", "topAgents"],
        "properties": {
          "name": {"type": "string"},
          "totalPoliciesSold": {"type": "integer"},
          "topAgents": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "percentOfPolicies"],
              "properties": {
                "name": {"type": "string"},
                "percentOfPolicies": {"type": "integer"}
              }
            }
          }
        }
      }
    }
  }
}
